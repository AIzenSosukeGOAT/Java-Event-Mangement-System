<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.oopphase2.AdminFrontend">
    <children>
        <Label alignment="CENTER" contentDisplay="CENTER" layoutX="128.0" prefHeight="71.0" prefWidth="470.0"
               text="Admin Dashboard" textAlignment="CENTER">
            <font>
                <Font name="System Bold" size="20.0"/>
            </font>
        </Label>
        <Button layoutX="417.0" layoutY="71.0" mnemonicParsing="false" onAction="#showCategories" prefHeight="50.0"
                prefWidth="179.0" text="Show Categories"/>
        <Button layoutX="30.0" layoutY="71.0" mnemonicParsing="false" onAction="#newCategory" prefHeight="50.0"
                prefWidth="179.0" text="Create Category"/>
        <Button layoutX="417.0" layoutY="171.0" mnemonicParsing="false" onAction="#deleteCategory" prefHeight="50.0"
                prefWidth="179.0" text="Delete Category"/>
        <Button layoutX="30.0" layoutY="171.0" mnemonicParsing="false" onAction="#editCategories" prefHeight="50.0"
                prefWidth="179.0" text="Update Category"/>
        <Button layoutX="228.0" layoutY="121.0" mnemonicParsing="false" onAction="#showAll" prefHeight="50.0"
                prefWidth="179.0" text="Show All"/>
        <TextArea fx:id="outputArea" editable="false" layoutX="24.0" layoutY="232.0" prefHeight="153.0"
                  prefWidth="552.0"/>
        <Button layoutX="249.0" layoutY="180.0" mnemonicParsing="false" onAction="#Return" prefHeight="40.0"
                prefWidth="138.0" text="Return"/>
    </children>
</AnchorPane>
