<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Button?>
<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12"
      fx:controller="com.example.oopphase2.EventFormController">
    <Label text="Event Form" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
    <TextField fx:id="titleField" promptText="Event Title"/>
    <TextField fx:id="descriptionField" promptText="Event Description"/>
    <ComboBox fx:id="categoryComboBox" promptText="Select Category"/>
    <ComboBox fx:id="roomComboBox" promptText="Select Room"/>
    <TextField fx:id="dateField" promptText="Date (DD-MM-YYYY)"/>
    <TextField fx:id="timeField" promptText="Time (HH:MM)"/>
    <TextField fx:id="priceField" promptText="Ticket Price"/>
    <Button text="Save Event" onAction="#saveEvent"/>
</VBox>